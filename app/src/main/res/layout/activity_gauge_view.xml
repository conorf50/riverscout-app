<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GaugeViewActivity">


    <com.google.android.material.chip.Chip
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:id="@+id/chipLevel"
            style="@style/Widget.MaterialComponents.Chip.Choice" android:text="Level"
            app:chipIcon="@drawable/ic_thermometer" android:checkable="true"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/location_textview"
            app:layout_constraintStart_toEndOf="@+id/chipTemp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.009" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Suir @ Old Bridge"
            android:layout_width="382dp"
            android:layout_height="28dp"
            android:id="@+id/gauge_name" android:fontFamily="sans-serif-light"
            android:textSize="20sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/ic_place_black_24dp"
            android:tint="@color/colorAccent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/location_icon"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.022"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="52.26, -7.83"
            android:layout_width="124dp"
            android:layout_height="20dp"
            android:id="@+id/location_textview"
            app:layout_constraintStart_toEndOf="@+id/location_icon"
            android:layout_marginStart="12dp" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.006" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="396dp"
            android:layout_height="536dp" app:srcCompat="@color/colorPrimary"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
    />
    <CheckBox
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:id="@+id/checkBox"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
            android:button="@drawable/ic_favorite_black_24dp" android:buttonTint="@android:color/holo_red_light"
            android:clickable="true"
            android:text="Add favourite"
            android:textSize="10sp" app:layout_constraintStart_toEndOf="@+id/chipLevel"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/showOnMap"
            app:layout_constraintHorizontal_bias="1.0"/>
    <com.google.android.material.chip.Chip
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:id="@+id/chipTemp"
            style="@style/Widget.MaterialComponents.Chip.Choice" android:text="Temp"
            app:chipIcon="@drawable/ic_thermometer" android:checkable="true"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/location_icon"
    />
    <Button
            android:text="Show on map"
            android:layout_width="94dp"
            android:layout_height="33dp"
            android:id="@+id/showOnMap"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintStart_toEndOf="@+id/location_textview" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/gauge_name" app:layout_constraintHorizontal_bias="0.926"
            android:textSize="10sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>