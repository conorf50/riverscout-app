<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GaugeViewActivity">


    <TextView
            android:text="Suir @ Old Bridge"
            android:layout_width="382dp"
            android:layout_height="28dp"
            android:id="@+id/gauge_name" android:fontFamily="sans-serif-light"
            android:textSize="20sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/ic_place_black_24dp"
            android:tint="@color/colorAccent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/location_icon"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.022"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="52.26, -7.83"
            android:layout_width="124dp"
            android:layout_height="20dp"
            android:id="@+id/location_textview"
            app:layout_constraintStart_toEndOf="@+id/location_icon"
            android:layout_marginStart="12dp" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.006" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:id="@+id/checkBox"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
            android:button="@drawable/ic_favorite_black_24dp" android:buttonTint="@android:color/holo_red_light"
            android:clickable="true"
            android:text="Add favourite"
            android:textSize="10sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/showOnMap"
    />
    <Button
            android:text="Show on map"
            android:layout_width="94dp"
            android:layout_height="33dp"
            android:id="@+id/showOnMap"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintStart_toEndOf="@+id/location_textview" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/gauge_name" app:layout_constraintHorizontal_bias="0.926"
            android:textSize="10sp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="517dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/gauge_name" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.807">

        <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.BarChart>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>