<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".activities.MainActivity" android:id="@+id/homePage">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="186dp"
            android:layout_height="171dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.961" android:id="@+id/cardListButton"
            android:layout_marginTop="4dp">
        <ImageView
                android:layout_width="165dp"
                android:layout_height="115dp" app:srcCompat="@drawable/ic_outline_list_48px" android:id="@+id/imgMap"
                tools:layout_conversion_absoluteHeight="149dp"
                tools:layout_conversion_absoluteWidth="195dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"/>
        <Button
                android:text="List"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:id="@+id/buttonList"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAppearance="@style/TextAppearance.AppCompat" android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imgMap" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="76dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="186dp"
            android:layout_height="171dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/cardMapButton" android:layout_marginTop="4dp">
        <ImageView
                android:layout_width="165dp"
                android:layout_height="115dp" app:srcCompat="@drawable/ic_outline_map_48px" android:id="@+id/imgList"
                tools:layout_conversion_absoluteHeight="149dp"
                tools:layout_conversion_absoluteWidth="195dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"/>
        <Button
                android:text="Map"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:id="@+id/buttonMap"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAppearance="@style/TextAppearance.AppCompat" android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imgList" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="76dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>